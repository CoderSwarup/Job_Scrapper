{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node10"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.yaml"
  ],
  "exclude": [
    "node_modules"
  ]
}